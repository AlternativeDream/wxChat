/**exam.wxss**/
.question {
  height: 300rpx;
  width: 90%;
  position: absolute;
  top: 10rpx;
  border: 1px solid #F0F0F0;
  border-radius: 15rpx;
  margin-bottom: 50rpx;
}

.options {
  width: 90%;
  margin-top: 20rpx;
}

.options button {
  text-align: left;
  padding-left: 30rpx;
}

.choose{
  margin-top: 40rpx;
  text-align: left;
  width: 90%;
  padding-left: 50rpx;
}

.switch {
  height: 100rpx;
  width: 100%;
  position: absolute;
  bottom: 0; 
}

.switch button {
  width: 50%;
  height: 100%;
  background: #333;
  color: #FFF;
  display: inline-block;
}